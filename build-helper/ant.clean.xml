<project default="clean" basedir="../../zats">

	<property name="zats" value="zats" />
	<property name="common" value="zats-common" />
	<property name="example" value="zats-example" />
	<property name="mimic" value="zats-mimic" />
	<property name="mimic-ext6" value="zats-mimic-ext6" />
	
	<property name="zats.path" location="${basedir}/${zats}/target" />
	<property name="common.path" location="${basedir}/${common}/target" />
	<property name="example.path" location="${basedir}/${example}/target" />
	<property name="mimic.path" location="${basedir}/${mimic}/target" />
	<property name="mimic-ext6.path" location="${basedir}/${mimic-ext6}/target" />

	<target name="clean" description="clean maven targets">
		<delete dir="${zats.path}" />
		<delete dir="${common.path}" />
		<delete dir="${example.path}" />
		<delete dir="${mimic.path}" />
		<delete dir="${mimic-ext6.path}" />
	</target>

	<target name="build" description="build projects" depends="clean">
		<eclipse.incrementalBuild project="${common}" kind="full" />
		<eclipse.incrementalBuild project="${example}" kind="full" />
		<eclipse.incrementalBuild project="${mimic}" kind="full" />
		<eclipse.incrementalBuild project="${mimic-ext6}" kind="full" />
	</target>
	
</project>